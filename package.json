{
  "name": "deelan",
  "version": "0.1.0",
  "private": false,
  "description": "A private-first markdown notebook site builder for posts and snippets.",
  "license": "MIT",
  "author": {
    "name": "Jonathan Hadida",
    "url": "https://github.com/jhadida"
  },
  "contributors": [
    {
      "name": "Jonathan Hadida",
      "url": "https://github.com/jhadida"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jhadida/deelan.git"
  },
  "bugs": {
    "url": "https://github.com/jhadida/deelan/issues"
  },
  "homepage": "https://github.com/jhadida/deelan#readme",
  "keywords": [
    "markdown",
    "notes",
    "knowledge-base",
    "astro",
    "static-site",
    "cli",
    "mathjax",
    "shiki"
  ],
  "type": "module",
  "bin": {
    "deelan": "./bin/deelan.mjs"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build:prepare-mathjax": "tsx scripts/prepare-mathjax.ts",
    "build:prepare-search": "tsx scripts/prepare-search.ts",
    "build:prepare-content-assets": "tsx scripts/prepare-content-assets.ts",
    "build:indexes": "tsx scripts/build-indexes.ts",
    "build:analytics": "tsx scripts/build-analytics.ts",
    "build:timeline": "tsx scripts/build-git-timeline.ts",
    "build:preflight": "npm run build:prepare-mathjax && npm run build:prepare-search && npm run build:prepare-content-assets && npm run validate && npm run build:indexes && npm run build:analytics && npm run build:timeline",
    "cleanup:generated": "node --import tsx scripts/cleanup.ts generated",
    "cleanup:outputs": "node --import tsx scripts/cleanup.ts outputs",
    "cleanup:all": "node --import tsx scripts/cleanup.ts all",
    "optional:pdf": "playwright install chromium",
    "optional:install": "npm run optional:pdf",
    "storybook:build": "storybook build -c storybook --output-dir .site-storybook && node --import tsx scripts/storybook-cleanup.ts",
    "storybook:serve": "storybook dev -c storybook -p 6006 --no-open",
    "docs:install": "python3 -m pip install -r requirements-docs.txt",
    "docs:serve": "mkdocs serve -w docs/ -w mkdocs.yml --livereload",
    "docs:build": "mkdocs build",
    "docs:deploy": "mkdocs gh-deploy --force",
    "pack:dry-run": "mkdir -p .npm-packages && npm pack --dry-run --pack-destination .npm-packages --cache ./.generated/.npm-cache",
    "pack:local": "mkdir -p .npm-packages && npm pack --pack-destination .npm-packages --cache ./.generated/.npm-cache",
    "dev": "npm run build:prepare-mathjax && npm run build:prepare-search && npm run build:prepare-content-assets && astro dev",
    "test": "node --import tsx --test tests/**/*.test.ts",
    "prebuild": "npm run build:preflight",
    "build": "astro build",
    "serve": "astro preview",
    "preview": "npm run serve",
    "tags": "node ./bin/deelan.mjs tags",
    "export": "node ./bin/deelan.mjs export",
    "validate": "node ./bin/deelan.mjs validate",
    "synthetic:generate": "tsx scripts/synthetic-generate.ts",
    "synthetic:clean": "tsx scripts/synthetic-cleanup.ts",
    "validate:with-synthetic": "DEELAN_INCLUDE_SUBFOLDERS=synthetic npm run validate",
    "build:with-synthetic": "DEELAN_INCLUDE_SUBFOLDERS=synthetic npm run build",
    "test:with-synthetic": "DEELAN_INCLUDE_SUBFOLDERS=synthetic npm test"
  },
  "dependencies": {
    "astro": "^5.2.0",
    "chart.js": "^4.5.1",
    "cytoscape": "^3.33.1",
    "fast-glob": "^3.3.3",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.1",
    "marked": "^17.0.3",
    "marked-highlight": "^2.2.3",
    "mathjax": "^4.1.0",
    "shiki": "^3.22.0"
  },
  "optionalDependencies": {
    "playwright": "^1.58.2"
  },
  "devDependencies": {
    "@storybook/addon-docs": "^10.2.10",
    "@storybook/builder-vite": "^10.2.10",
    "storybook": "^10.2.10",
    "storybook-astro": "^0.1.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
