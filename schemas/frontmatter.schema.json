{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/frontmatter.schema.json",
  "title": "DEELAN Frontmatter",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "type", "title", "tags", "version"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "type": {
      "type": "string",
      "enum": ["post", "snippet"]
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "tags": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9]+(\\.[a-z0-9]+)*$"
      }
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "summary": {
      "type": "string"
    },
    "notes": {
      "type": "string"
    },
    "related_ids": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
      }
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "published", "archived"]
    }
  }
}
