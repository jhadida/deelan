{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/src/schemas/frontmatter-snippet.schema.json",
  "title": "DEELAN Snippet Frontmatter",
  "type": "object",
  "additionalProperties": false,
  "required": ["title", "tags"],
  "properties": {
    "type": {
      "type": "string",
      "enum": ["snippet"]
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "tags": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9]+(\\.[a-z0-9]+)*$"
      }
    },
    "summary": {
      "type": "string"
    },
    "notes": {
      "type": "string"
    },
    "related_ids": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^(post|snippet)--[a-z0-9]+(?:-[a-z0-9]+)*$"
      }
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
