---
interface Props {
  commit: string;
  commitUrl?: string;
  date: string;
  message: string;
  author: string;
}

const { commit, commitUrl, date, message, author } = Astro.props;
---

<li class="timeline-item">
  <div class="timeline-item-head">
    {
      commitUrl ? (
        <a href={commitUrl} class="timeline-commit-link" target="_blank" rel="noopener noreferrer">
          <span class="timeline-commit">{commit}</span>
        </a>
      ) : (
        <span class="timeline-commit">{commit}</span>
      )
    }
    <span class="timeline-separator" aria-hidden="true">â€¢</span>
    <span class="timeline-date">{date}</span>
    <span class="timeline-author muted">{author}</span>
  </div>
  <div class="timeline-message">{message}</div>
</li>
