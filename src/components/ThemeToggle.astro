---
interface Props {
  id?: string;
  currentTheme?: 'light' | 'dark';
}

const { id = 'theme-toggle', currentTheme = 'light' } = Astro.props;
const title = currentTheme === 'dark' ? 'Switch to light theme' : 'Switch to dark theme';
---

<button
  id={id}
  class="theme-toggle"
  type="button"
  aria-label={title}
  title={title}
  data-theme={currentTheme}
>
  <svg
    class="theme-icon theme-icon-sun"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="1.8"
    aria-hidden="true"
  >
    <circle cx="12" cy="12" r="4.5"></circle>
    <line x1="12" y1="2.5" x2="12" y2="5"></line>
    <line x1="12" y1="19" x2="12" y2="21.5"></line>
    <line x1="2.5" y1="12" x2="5" y2="12"></line>
    <line x1="19" y1="12" x2="21.5" y2="12"></line>
    <line x1="5.2" y1="5.2" x2="6.9" y2="6.9"></line>
    <line x1="17.1" y1="17.1" x2="18.8" y2="18.8"></line>
    <line x1="5.2" y1="18.8" x2="6.9" y2="17.1"></line>
    <line x1="17.1" y1="6.9" x2="18.8" y2="5.2"></line>
  </svg>
  <svg
    class="theme-icon theme-icon-moon"
    viewBox="0 0 24 24"
    fill="currentColor"
    stroke="none"
    aria-hidden="true"
  >
    <path
      fill-rule="evenodd"
      clip-rule="evenodd"
      d="M9.528 1.718a.75.75 0 0 1 .162.812 8.25 8.25 0 0 0 10.78 10.78.75.75 0 0 1 .974.974A9.75 9.75 0 1 1 8.556 1.394a.75.75 0 0 1 .972.324Z"
    ></path>
  </svg>
  <span class="sr-only">Toggle theme</span>
</button>
