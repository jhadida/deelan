---
import SiteShell from '../components/layout/SiteShell.astro';
---

<SiteShell pageTitle="UI Lab">
  <div class="container stack">
    <header class="page-header">
      <span class="eyebrow">Design System</span>
      <h1 class="page-title">UI Lab</h1>
      <p class="page-subtitle">
        Component/state catalog for no-framework UI polish. Use this page for visual QA and future
        Storybook migration.
      </p>
    </header>

    <section class="demo-grid">
      <article class="panel section-block">
        <h2>Buttons</h2>
        <div class="demo-row">
          <button class="btn btn-primary" type="button">Primary</button>
          <button class="btn" type="button">Default</button>
          <button class="btn btn-danger" type="button">Danger</button>
          <button class="btn" type="button" disabled>Disabled</button>
        </div>
      </article>

      <article class="panel section-block">
        <h2>Inputs</h2>
        <label>
          Search
          <input type="search" placeholder="Try tag:data.platform.*" />
        </label>
        <label>
          Date
          <input type="date" />
        </label>
      </article>
    </section>

    <section class="panel section-block">
      <h2>Metadata Grid</h2>
      <div class="meta-grid">
        <div class="meta-item"><strong>Version</strong><div>v1.0.0</div></div>
        <div class="meta-item"><strong>Status</strong><div>published</div></div>
        <div class="meta-item"><strong>Tags</strong><div>data, pipeline, sql</div></div>
      </div>
    </section>

    <section class="panel section-block">
      <h2>Timeline</h2>
      <ul class="timeline-list">
        <li class="timeline-item">
          <div><code>17ab23ef</code> <strong>2026-02-18</strong></div>
          <div>Refined metadata card rhythm and panel contrast.</div>
          <div class="muted">Codex Agent</div>
        </li>
      </ul>
    </section>
  </div>
</SiteShell>
